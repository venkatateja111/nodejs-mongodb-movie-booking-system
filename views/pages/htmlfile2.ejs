<!DOCTYPE html>
<html lang="en">
<head>
  <title>MovieTicks - Movies</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
    <style type="text/css">
      a{
        text-decoration: none!important;
      }
    </style>  
        


  
</head>
<body style="background: linear-gradient(135deg, #fe2929, #ffb3c5)!important;">
   <div class="header-blue">
<%- include('../partials/header'); %>
<%- include('pagination'); %>
 
<br><br><br>

<div class="container">
 <% if(typeof alert2 != 'undefined') { %>
     <% for (i = 0; i < img.length; i=i+4) { 
      
               %>
<div class="row">

       <%
       if(img[i] !== undefined)
       {
        %>
        <div class="col-lg-3 col-6">
          <div class="card mb-2">
               <img class="card-img-top" src="https://image.tmdb.org/t/p/w500<%=img[i]%>" alt="movie"  >
              <div class="card-body">
                <h4 class="card-title d-none d-sm-block"><%=title[i]%></h4>
                
                <a class="btn btn-primary" href="/movie/<%=type[i]%>/<%=id[i]%>">See Details</a>
              </div>
          </div>
        </div>
        <%
      }
        %>


        <%
       if(img[i+1] !== undefined)
       {
        %>
        <div class="col-lg-3 col-6">
          <div class="card mb-2">
               <img class="card-img-top" src="https://image.tmdb.org/t/p/w500<%=img[i+1]%>" alt="movie"  >
              <div class="card-body">
                <h4 class="card-title d-none d-sm-block"><%=title[i+1]%></h4>
                
                <a class="btn btn-primary" href="/movie/<%=type[i+1]%>/<%=id[i+1]%>">See Details</a>
              </div>
          </div>
        </div>
        <%
      }
        %>



      <%
       if(img[i+2] !== undefined)
       {
        %>
        <div class="col-lg-3 col-6">
          <div class="card mb-2">
               <img class="card-img-top" src="https://image.tmdb.org/t/p/w500<%=img[i+2]%>" alt="movie"  >
              <div class="card-body">
                <h4 class="card-title d-none d-sm-block"><%=title[i+2]%></h4>
                
                <a class="btn btn-primary" href="/movie/<%=type[i+2]%>/<%=id[i+2]%>">See Details</a>
              </div>
          </div>
        </div>
        <%
      }
        %>

      

       <%
       
       if(img[i+3] !== undefined)
       {
        %>
        <div class="col-lg-3 col-6">
          <div class="card mb-2">
               <img class="card-img-top" src="https://image.tmdb.org/t/p/w500<%=img[i+3]%>" alt="movie"  >
              <div class="card-body">
                <h4 class="card-title d-none d-sm-block"><%=title[i+3]%></h4>
                
                <a class="btn btn-primary" href="/movie/<%=type[i+3]%>/<%=id[i+3]%>">See Details</a>
              </div>
          </div>
        </div>

        <%
      }
        %>



</div>
<%} %> <% } %>
</div>
</div>
<%- include('../partials/footer'); %>
</body>
</html>
